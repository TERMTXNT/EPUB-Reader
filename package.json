{
  "name": "epub-translator-reader",
  "version": "1.0.0",
  "description": "EPUB reader with Japanese, Spanish, and Malayalam to English translation",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "npm run build"
  },
  "keywords": ["epub", "reader", "translator", "japanese", "spanish", "malayalam"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "xml2js": "^0.6.2",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.epubtranslator.reader",
    "productName": "EPUB Translator Reader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}